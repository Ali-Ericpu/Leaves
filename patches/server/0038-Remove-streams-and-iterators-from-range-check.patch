+                    j = org.spigotmc.TrackingRange.getEntityTrackingRange(entity, j); // Paper
 
-                if (j > i) {
-                    i = j;
+                    if (j > i) {
+                        i = j;
+                    }
                 }
             }
+            // Leaves end - remove iterators and streams
 
             return this.scaledRange(i);
         }
